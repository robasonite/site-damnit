{{> base_head}}
<header class="header section">
  <div class="container">
    <h1 class="title">Articles in category <em>{{title}}</em></h1>
  </div>
</header>
<section class="section">
  <div class="container">
    <ul>
    {{#pages}}
      <li class="article-list-item">
        <article>
          <h2 class="title is-3"><a href="{{{url}}}">{{title}}</a></h2>
          {{> article_meta}}
          <div class="article-summary">
          {{{summary}}}
          </div>
        </article>
      </li>
    {{/pages}}
    </ul>
  </div>
</section>
{{> base_tail}}
